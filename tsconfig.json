{
    "compilerOptions": {
        "target": "es2024",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "isolatedModules": true,
        "strict": true,
        "noEmit": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "pretty": true,
        "composite": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "newLine": "LF",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/dist/**",
        "**/node_modules/**"
    ]
}